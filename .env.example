# ============================================================================
# SudanFlood â€” Environment Variables
# Copy this file to .env.local and fill in your values
# ============================================================================

# --- Database (PostgreSQL + PostGIS) ---
DATABASE_URL=postgresql://sudanflood:sudanflood_dev_password@localhost:5432/sudanflood
POSTGRES_DB=sudanflood
POSTGRES_USER=sudanflood
POSTGRES_PASSWORD=sudanflood_dev_password
POSTGRES_PORT=5432

# --- Redis ---
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# --- MinIO (S3-Compatible Storage) ---
MINIO_ENDPOINT=http://localhost:9000
MINIO_ROOT_USER=sudanflood
MINIO_ROOT_PASSWORD=sudanflood_minio_password
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET_UPLOADS=uploads
MINIO_BUCKET_UAV=uav-imagery
MINIO_BUCKET_EXPORTS=exports

# --- NextAuth ---
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-in-production

# --- JWT ---
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# --- Socket.io ---
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# --- pgAdmin ---
PGADMIN_DEFAULT_EMAIL=admin@sudanflood.dev
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_PORT=5050

# --- App ---
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_DEFAULT_LOCALE=ar
NODE_ENV=development
